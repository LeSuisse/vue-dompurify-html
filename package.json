{
    "private": true,
    "name": "root-vue-dompurify-html-repo",
    "packageManager": "pnpm@10.28.1",
    "scripts": {
        "typecheck": "turbo run typecheck",
        "build": "turbo run build",
        "test": "turbo run test",
        "test-mutation": "turbo run test-mutation",
        "lint": "eslint --flag unstable_native_nodejs_ts_config '**/*.ts' '**/*.mts' && prettier --check '**/*.md' '**.json' './.github/'",
        "lint-fix": "eslint --flag unstable_native_nodejs_ts_config '**/*.ts' '**/*.mts' --fix && prettier --write '**/*.md' '**/*.json' './.github/'"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "eslint": "9.39.2",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.5",
        "prettier": "3.8.1",
        "turbo": "2.7.6",
        "typescript": "5.9.3",
        "typescript-eslint": "8.54.0"
    }
}
