{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "declaration": true,
        "outDir": "./types/",
        "lib": ["es2020", "dom"],
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "isolatedModules": true,
        "skipLibCheck": true,
        "strict": true,
        "exactOptionalPropertyTypes": true
    },
    "include": ["./src/"]
}
